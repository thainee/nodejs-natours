mixin cardData(icon, text)
    .card__data
        svg.card__icon
            use(xlink:href=`/img/icons.svg#icon-${icon}`)
        span= text

.card
    .card__header
        .card__picture
            .card__picture-overlay &nbsp;
            img.card__picture-img(src='/img/tours/' + tour.imageCover alt=tour.name)

        h3.heading-tertiary
            span= tour.name

    .card__details
        h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
        p.card__text= tour.summary
        +cardData('map-pin', tour.startLocation.description)
        - const date = tour.startDates[0].toLocaleString('en-us', { month: 'long', year: 'numeric'})
        +cardData('calendar', date)
        +cardData('flag', `${tour.locations.length} stops`)
        +cardData('user', `${tour.maxGroupSize} people`)

    .card__footer
        p
            span.card__footer-value= `$${tour.price}`
            | 
            span.card__footer-text per person
        p.card__ratings
            span.card__footer-value= tour.ratingsAverage
            | 
            span.card__footer-text= `rating (${tour.ratingsQuantity})`
        a.btn.btn--green.btn--small(href='/tours/' + tour.slug) Details